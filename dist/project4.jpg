<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <rect width="400" height="300" fill="#f3f4f6"/>
  <rect x="50" y="50" width="300" height="200" fill="#059669" rx="8"/>
  
  <!-- Blog header -->
  <rect x="70" y="80" width="260" height="40" fill="#ffffff" rx="4"/>
  <text x="200" y="105" text-anchor="middle" fill="#059669" font-family="Arial" font-size="14" font-weight="bold">My Blog Title</text>
  
  <!-- Blog content -->
  <rect x="70" y="130" width="260" height="20" fill="#f3f4f6" rx="2"/>
  <rect x="70" y="155" width="260" height="20" fill="#f3f4f6" rx="2"/>
  <rect x="70" y="180" width="200" height="20" fill="#f3f4f6" rx="2"/>
  
  <!-- Author info -->
  <circle cx="80" cy="220" r="15" fill="#6b7280"/>
  <text x="80" y="225" text-anchor="middle" fill="#ffffff" font-family="Arial" font-size="10" font-weight="bold">A</text>
  
  <text x="110" y="225" text-anchor="start" fill="#ffffff" font-family="Arial" font-size="12">By Author Name</text>
  <text x="110" y="240" text-anchor="start" fill="#cbd5e1" font-family="Arial" font-size="10">Published on Date</text>
  
  <text x="200" y="250" text-anchor="middle" fill="#374151" font-family="Arial" font-size="16" font-weight="bold">Blog Website</text>
</svg>
